<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Registration of the Elements"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp"
        android:textColor="#e4ec12"/>

    <TextView android:id="@+id/txtUsername"
        android:text = "Username:"  
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Register"
        />
   
    <EditText android:id="@+id/edt_username"
             android:layout_height="wrap_content"
             android:layout_width="250px"
             android:layout_centerHorizontal="true"
                      
             android:singleLine="true" />
             
             
    <TextView android:id="@+id/txt_password"
        android:text = "Password:"  
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Username"
        />
   
    <EditText android:id="@+id/edt_password"
                  android:password="true"
             android:layout_height="wrap_content"
             android:layout_width="250px"
             android:layout_centerHorizontal="true"
            
             android:singleLine="true" />
    
        <TextView android:id="@+id/txt_email"
        android:text = "Email:"  
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_password"/>
   
        <EditText android:id="@+id/edt_email"
             android:layout_height="wrap_content"
             android:layout_width="250px"
             android:layout_centerHorizontal="true"
             android:singleLine="true" />
        
        <TextView android:id="@+id/txt_phone"
        android:text = "Phone:"  
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_email"/>
   
        <EditText android:id="@+id/edt_phone"
             android:layout_height="wrap_content"
             android:layout_width="250px"
             android:layout_centerHorizontal="true"
             android:singleLine="true" />
        
        <Button 
      		  android:id="@+id/SaveDetails"
              android:text="Save Details"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/txt_phone"
              android:onClick="SaveDetails"
              />

</LinearLayout>
